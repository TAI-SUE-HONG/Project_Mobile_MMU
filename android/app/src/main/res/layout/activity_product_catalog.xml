<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Product_catalog">

    <TextView
        android:id="@+id/simple_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="81dp"
        android:text="Products"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="417dp"
        android:layout_height="281dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_tomato"
                    android:layout_width="205dp"
                    android:layout_height="128dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/tomato" />

                <TextView
                    android:id="@+id/text_tomato"
                    android:layout_width="142dp"
                    android:layout_height="24dp"
                    android:layout_below="@+id/img_tomato"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="59dp"
                    android:text="Tomato (4 in 1 pack)" />

                <TextView
                    android:id="@+id/price_tomato"
                    android:layout_width="96dp"
                    android:layout_height="23dp"
                    android:layout_below="@+id/text_tomato"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="92dp"
                    android:text="RM 6.00" />

                <Button
                    android:id="@+id/add_button_tomato"
                    android:layout_width="141dp"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="121dp"
                    android:layout_marginEnd="28dp"
                    android:layout_marginBottom="40dp"
                    android:text="Add to Cart" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="287dp">

                <ImageView
                    android:id="@+id/img_chicken"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="-1dp"
                    android:src="@drawable/chicken_wing" />

                <TextView
                    android:id="@+id/text_chicken"
                    android:layout_width="161dp"
                    android:layout_height="29dp"
                    android:layout_below="@+id/img_chicken"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="45dp"
                    android:text="Chicken Wing +/- 200g" />

                <TextView
                    android:id="@+id/price_chicken"
                    android:layout_width="78dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/text_chicken"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="127dp"
                    android:text="RM 10.00" />

                <Button
                    android:id="@+id/add_button_chicken"
                    android:layout_width="134dp"
                    android:layout_height="35dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="43dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="49dp"
                    android:text="Add to Cart" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="415dp"
        android:layout_height="300dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="64dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_bellpepper"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/bell_pepper" />

                <TextView
                    android:id="@+id/text_bellpepper"
                    android:layout_width="169dp"
                    android:layout_height="32dp"
                    android:layout_below="@+id/img_bellpepper"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="34dp"
                    android:text="Bell Pepper (4 in 1 pack)"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/price_bellpepper"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_bellpepper"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="100dp"
                    android:text="RM 6.00" />

                <Button
                    android:id="@+id/add_button_bellpepper"
                    android:layout_width="135dp"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="46dp"
                    android:layout_marginEnd="27dp"
                    android:layout_marginBottom="27dp"
                    android:text="Add to Cart" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="208dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_tladyfinger"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="21dp"
                    android:layout_marginEnd="0dp"
                    android:src="@drawable/lady_finger" />

                <TextView
                    android:id="@+id/text_ladyfinger"
                    android:layout_width="168dp"
                    android:layout_height="34dp"
                    android:layout_above="@+id/add_button_ladyfinger"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="9dp"
                    android:layout_marginEnd="31dp"
                    android:layout_marginBottom="29dp"
                    android:text="Lady Finger "
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/price_ladyfinger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="145dp"
                    android:layout_marginBottom="72dp"
                    android:text="RM5.00" />

                <Button
                    android:id="@+id/add_button_ladyfinger"
                    android:layout_width="135dp"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="46dp"
                    android:layout_marginEnd="27dp"
                    android:layout_marginBottom="27dp"
                    android:text="Add to Cart" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bot_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>